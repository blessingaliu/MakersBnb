<head>
  <link rel="stylesheet" href="https://hackerthemes.com/bootstrap-themes/demo/theme-machine/hello-world/css/bootstrap4-hello-world.min.css">
  <link rel="stylesheet" href="style.css">
</head>

<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-info">
  <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse"
    data-target="#navbarTogglerDemo03" aria-controls="navbarTogglerDemo03" aria-expanded="false"
    aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
    <ul class="navbar-nav mr-auto mt-2 mt-md-0">
      <li class="nav-item active">
        <a class="nav-link" href="/spaces">View spaces
          <span class="sr-only">(current)</span>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/login">Log in</a>
      </li>
      <% if @name %>
      <li class="nav-item">
        <a class="nav-link" href="/create_space">Create a space</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/my_spaces">My spaces</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/my_booking_history">My booking history</a>
      </li>
      <% end %>
      </ul>
  </div>
</nav>

<main>
<% if @name %>
  <h1>Hello <%= @name %>!</h1>
<% else %>
  <h1>Hello visitor!</h1>
<% end %>

<% @spaces.each do |space| %>
  <div class="space">
    <p><strong>Name:</strong> <%= space.name %></p>
    <p><strong>Description:</strong> <%= space.description %></p>
    <p><strong>Price:</strong> <%= space.price %></p>
    <p><span class="fas fa-phone"></span><a href = 'mailto:<%= space.email %>'><%= space.email %></a></p>
    <% if @name %>
      <form action="post-booking-request" method="post">
        <input type="hidden" class="form-control" required name="email" value="<%= space.email %>">
        <input type="hidden" class="form-control" required name="name" value="<%= space.name %>">
        <button type="submit" class="btn btn-info" value="Book a night">Book a night</button>
      </form>
    <% end %>
  </div>
<% end %>

</main>
</body>